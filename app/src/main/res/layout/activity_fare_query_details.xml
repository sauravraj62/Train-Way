<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FareQuery"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/Faretxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="16dp"
        android:text="𝙴𝚗𝚝𝚎𝚛 𝚃𝚛𝚊𝚒𝚗 𝙽𝚞𝚖𝚋𝚎𝚛"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fareedit11"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/round"
        android:ems="10"
        android:gravity="center"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/Faretxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="16dp"
        android:text="𝙴𝚗𝚝𝚎𝚛 𝚂𝚝𝚊𝚝𝚒𝚘𝚗 𝙲𝚘𝚍𝚎"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fareedit22"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/round"
        android:ems="10"
        android:gravity="center"

        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/Faretxt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="16dp"
        android:text="𝙴𝚗𝚝𝚎𝚛 𝙳𝚎𝚜𝚝𝚒𝚗𝚊𝚝𝚒𝚘𝚗 𝙲𝚘𝚍𝚎"
        android:textSize="25dp"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/fareedit33"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/round"
        android:ems="10"
        android:gravity="center"

        android:paddingTop="10dp" />

    <Button
        android:id="@+id/farecheckbtn1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:background="@drawable/button_style"
        android:text="𝐂𝐡𝐞𝐜𝐤 𝐅𝐚𝐫𝐞"
        android:textSize="30dp" />


</LinearLayout>